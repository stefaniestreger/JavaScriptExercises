<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">	
    <title>Sum of Numbers</title>
    <script>
		let firstLoop = true;
		do {	
			let secondLoop = true;

			do {	
				let userNumber = parseInt(prompt("Enter any top number to sum from 1 through 100"));	
				if(userNumber > 0 && userNumber <= 100) {
					let userSum = 0;

				for(let i = 1; i <= userNumber; i++) {
					userSum += i; 
				}
				alert("The sum of numbers from 1 through " + userNumber + " is " + userSum);
				secondLoop = false;

				} else if (isNaN(userNumber) || userNumber < 0 || userNumber > 100) { 
				alert("Please enter a number between 1 and 100."); 
				}
			} while(secondLoop);

			let keepGoing = prompt("Do another sum? (y/n)"); 
			if(keepGoing === "y") {
				firstLoop = true;
			} else {
				firstLoop = false;
			}
		} while(firstLoop) 
	</script>
</head>
<body>
    <main>
        <!-- Will show after JavaScript has run -->
        <h1>Thanks for using the Sum of Numbers application!</h1>
    </main>
</body>
</html>
